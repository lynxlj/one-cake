page{
  height: 100%;
}
.oc-mall{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.oc-prolist{
  text-align: center;
  font-size: 16px;
  height: 100%;
  flex: 1;
  overflow-x:hidden;
  color: #8a8a8a;
}
.oc-prolist-content{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.oc-prolist-content-item{
  width: 320rpx;
  height: 450rpx;
  margin-top: 10rpx;
}
.oc-prolist-content-item-img{
  width: 320rpx;
  height: 320rpx;
}
.oc-prolist-content-item-title{
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
  padding: 0 10rpx;
  font-size: 16px;
}
.oc-prolist-content-item-bottom{
  padding: 0 10rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  color: #f23;
  line-height: 50rpx;
}
.icon-gouwuche{
  font-size: 20px;
  width: 50rpx;
  height: 50rpx;
  border: 1px solid #ff884d;
  color: #ff884d;
  border-radius: 50%;
}
.nomore{
  font-size: 16px;
  color: #8a8a8a;
}
.oc-mall-nav{
  font-size: 16px;
  justify-content: space-around;
  color: #ff884d;
  width: 100%;
  height: 100rpx;
  overflow: auto;
  line-height: 100rpx;
}
.oc-mall-nav::-webkit-scrollbar{
  display: none;
}
.oc-mall-nav-wrap{
  width: 150%;
  display: flex;
  justify-content: space-around;
}
.oc-mall-nav-item-active{
  background: #FF884D;
  color: #fff;
}